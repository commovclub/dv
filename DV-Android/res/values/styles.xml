<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:windowNoTitle">true</item>  设置没有标题 -->
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="tab_container"></style>

    <style name="tab_container_item">
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_container_item_name">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tab_container_item_counter">
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_big_size">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_middle_size">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_middleLittle_size">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_little_size">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="search_key" parent="@style/text_middle_size">
        <item name="android:textColor">#036EB7</item>
    </style>

    <style name="suggest_keyword" parent="@style/text_middle_size">
        <item name="android:textColor">@color/suggest_keyword_content</item>
    </style>

    <style name="common_header_title" parent="@style/text_big_size">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="setting_item_text" parent="@style/text_middle_size">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawableRight">@drawable/setting_item_right_arrow</item>
    </style>

    <style name="listview">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="list_container">
        <item name="android:background">@drawable/background_view_rounded_container</item>
    </style>

    <style name="list_item_top">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_top</item>
    </style>

    <style name="list_item_middle">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_middle</item>
    </style>

    <style name="list_item_bottom">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_bottom</item>
    </style>

    <style name="list_item_single">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_single</item>
    </style>

    <style name="list_item_chevron">
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/chevron</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <!-- TEXT -->
    <style name="content_page_large_text">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">17.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="content_page_small_text">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">14.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_selector</item>
    </style>

    <style name="content_page_large_count_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff8295bf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8.0dip</item>
    </style>

</resources>