<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/search_key_well_number_margin_left"
    android:paddingRight="@dimen/search_key_well_number_margin_left" >

    <TextView
        style="@style/suggest_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:singleLine="true"
        android:text="#"
        android:textColor="@color/suggest_keyword_content"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/keyword_suggest_content"
        style="@style/suggest_keyword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="@color/suggest_keyword_content" />

</LinearLayout>