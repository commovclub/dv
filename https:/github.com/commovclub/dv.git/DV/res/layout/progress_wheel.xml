<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res/com.commov.app.dv"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerInParent="true" >

    <com.commov.app.dv.widget.ProgressWheel
        android:id="@+id/pw_spinner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        ProgressWheel:barColor="#0097D6"
        ProgressWheel:barLength="30dp"
        ProgressWheel:barWidth="5dp"
        ProgressWheel:rimColor="#550097D6"
        ProgressWheel:rimWidth="2dp"
        ProgressWheel:text="加载中..."
        ProgressWheel:textColor="#FFFFFF"
        ProgressWheel:textSize="14sp" />

</RelativeLayout>