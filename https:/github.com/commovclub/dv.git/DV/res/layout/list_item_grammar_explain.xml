<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/grammar_explain_header_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/search_key_well_number_margin_left"
        android:paddingRight="@dimen/search_key_well_number_margin_left"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/grammar_explain_title"
            style="@style/text_middle_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="xxx 贡献"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/grammar_explain_edit_time"
            style="@style/text_little_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2013-07-10最后编辑"
            android:textColor="#847362" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/grammar_explain_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f2ef"
        android:orientation="vertical"
        android:paddingLeft="@dimen/search_key_well_number_margin_left"
        android:paddingRight="@dimen/search_key_well_number_margin_left" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fadingEdge="none"
            android:focusableInTouchMode="true"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/grammar_explain_img_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/grammar_explain_content_tv"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>